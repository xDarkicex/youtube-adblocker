{
    "manifest_version": 3,
    "name": "YouTube AdBlocker",
    "version": "0.1.0",
    "description": "Blocks Ads on YouTube, with precision.",
    "permissions": ["webRequest", "webNavigation", "storage"],
    "host_permissions": ["*://*.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["dist/content.js"]
      }
    ]
  }